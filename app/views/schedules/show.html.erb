<div class="container">
    <div class="row">
        <div class="col-md-6">
            <%= image_tag("montagne1.jpg", class: 'img-fluid') %>
        </div>
        <div class="col-md-6">
            <h1>Résumé de votre réservation</h1>
            <%= form_with(url: "/bookings", method: "post") do %>
              <%= hidden_field_tag 'schedule_id', @schedule.id %>
              <div class="form-group row">
                  <%= label_tag(:q, "Lieu", class: 'col-sm-2 col-form-label') %>
                <div class="col-sm-10">
                  <%= text_field_tag '', @schedule.mountain.mount_title, disabled: true, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group row">
                  <%= label_tag(:z, "Date", class: 'col-sm-2 col-form-label') %>
                <div class="col-sm-10">
                   <%= text_field_tag '', @schedule.schedule_date, disabled: true, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group row">
                  <%= label_tag(:participants, "Participants", class: 'col-sm-2 col-form-label') %>
                <div class="col-sm-10">
                  <%= number_field_tag 'participants', '1', min: 1, max: @available_slot.to_i, class: 'form-control' %>
                </div>
              </div>
              <%= submit_tag("Ajouter au panier", class: 'btn btn-primary btn-block') %>
            <% end %>
        </div>
    </div>
</div>

