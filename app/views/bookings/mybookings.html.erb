<div class="container">
    <div class="row mt-100">
        <div class="col-12 text-center">
            <h1 class="">Liste des r√©servations</h1>
            <table class="table text-center">
              <thead>
                <tr>
                  <th scope="col">Montagne</th>
                  <th scope="col">Date</th>
                  <th scope="col">Participants</th>
                  <th scope="col">Paiement</th>
                  <th scope="col">Voir</th>
                </tr>
              </thead>
              <tbody>
              <% @bookings.each do |booking| %>
                <tr>
                  <th scope="row">
                    <%= booking.mountain.mount_title %>
                  </th>
                  <td>
                    <%= booking.schedule.schedule_date %>
                  </td>
                  <td>
                    <%= booking.booking_participants %> / <%= booking.schedule.schedule_max_participants %>
                  </td>
                  <td>
                    <% if booking.payement_status == true %>
                      <i class="fas fa-check"></i>
                    <% else %>
                      <a href="/bookings/<%= booking.id %>/payement" class="btn btn-primary btn-sm btn-success">PAYER</a>
                    <% end %>
                  </td>
                  <td>
                    <a href="/bookings/<%= booking.id %>" class="btn btn-primary btn-sm btn-success"><i class="fas fa-eye"></i></a>
                  </td>
              <% end %>
              </tbody>
            </table>
        </div>
    </div>
</div>