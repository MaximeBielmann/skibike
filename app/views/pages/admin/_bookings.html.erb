<div class="container">
    <div class="row mt-100">
        <div class="col-12 text-center">
            <h1 class="">Liste des réservations</h1>
            <table class="table text-center">
              <thead>
                <tr>
                  <th scope="col">Montagne</th>
                  <th scope="col">Date</th>
                  <th scope="col">Participants</th>
                  <th scope="col">Paiement</th>
                  <th scope="col">Voir</th>
                  <th scope="col">Supprimer</th>
                </tr>
              </thead>
              <tbody>
              <% @bookings.each do |booking| %>
                <tr>
                  <th scope="row">
                    <%= booking.mountain.mount_title %>
                  </th>
                  <td>
                    <%= booking.schedule.schedule_date %>
                  </td>
                  <td>
                    <%= booking.booking_participants %> / <%= booking.schedule.schedule_max_participants %>
                  </td>
                  <td>
                    <% if booking.payement_status == true %>
                      <i class="fas fa-check"></i>
                    <% else %>
                      <i class="fas fa-times"></i>
                    <% end %>
                  </td>
                  <td>
                    <a href="/bookings/<%= booking.id %>" class="btn btn-primary btn-sm btn-success"><i class="fas fa-eye"></i></a>
                  </td>
                  <td>
                    <%= form_tag("/bookings/#{booking.id}", method: "delete") do %>
                        <%= button_tag type: 'submit', class: 'btn btn-primary btn-sm btn-success' do %>
                                <i class="fas fa-trash"></i>
                        <% end %>
                    <% end %>
                  </td>
              <% end %>
              </tbody>
            </table>
        </div>
    </div>
    <div class="row mt-100">
        <div class="col-12 text-center">
            <h1 class="">Liste des disponibilités</h1>
            <table class="table text-center">
              <thead>
                <tr>
                  <th scope="col">Montagne</th>
                  <th scope="col">Date</th>
                  <th scope="col">Participants</th>
                  <th scope="col">Réserver</th>
                </tr>
              </thead>
              <tbody>
              <% @schedules.each do |schedule| %>
                <tr>
                  <th scope="row">
                    <%= schedule.mountain.mount_title %>
                  </th>
                  <td>
                    <%= schedule.schedule_date %>
                  </td>
                  <td>
                    <%= schedule.schedule_current_participants %> / <%= schedule.schedule_max_participants %>
                  </td>
                  <td>
                    <button class="btn btn-primary">Réserver</button>
                  </td>
              <% end %>
              </tbody>
            </table>
        </div>
    </div>
</div>