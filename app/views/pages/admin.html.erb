<div class="container-fluid container-fluid-admin">
    <% if current_user.admin %>
        <div class="row row-admin">
      <div class="col-lg-1 col-md-2 col-sm-12">
        <div class="list-group" id="list-tab" role="tablist">
          <a class="list-group-item list-group-item-action active" id="list-mountain-list" data-toggle="list" href="#list-mountain" role="tab" aria-controls="mountain">Montagnes</a>
          <a class="list-group-item list-group-item-action" id="list-booking-list" data-toggle="list" href="#list-booking" role="tab" aria-controls="booking">Sorties</a>
          <a class="list-group-item list-group-item-action" id="list-card-list" data-toggle="list" href="#list-card" role="tab" aria-controls="card">Cartes</a>
        </div>
      </div>
      <div class="col-lg-11 col-md-10 col-sm-12">
        <div class="tab-content" id="nav-tabContent">
          <div class="tab-pane fade show active" id="list-mountain" role="tabpanel" aria-labelledby="list-mountain-list"><%= render "pages/admin/mountains" %></div>
          <div class="tab-pane fade" id="list-booking" role="tabpanel" aria-labelledby="list-booking-list"><%= render "pages/admin/bookings" %></div>
          <div class="tab-pane fade" id="list-card" role="tabpanel" aria-labelledby="list-card-list"><%= render "pages/admin/cards" %></div>
        </div>
      </div>
    </div>
    <% else %>
        <div class="row">
          <div class="col-12"> 
              <h1 class="text-center" style="padding: 300px 0 300px 0;">ACCES NON AUTORISE</h1>
          </div>
        </div>
    <% end %>
</div>





